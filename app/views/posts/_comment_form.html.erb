<script>
    function clearField(theText,divClass) {
        if (theText.value == theText.defaultValue) {
            theText.value = "";
        }
        /* TODO: Esto es una chapuza, tno puedo pasarle en la variable divClass el nombre de la clase (porque así ademas los cambios afectan
           a todos los formularios. Lo logico es que con esa veriable theText que es el objeto Value de cada field, pueda deducir su clase padre y ahí cambiar los valores. */
        if (divClass == ".name_field input") {
            $(".name_field input").css('color', 'black');
        }
        else if (divClass == ".web_page_field input") {
            $(".web_page_field input").css('color', 'black');
        }
        else {
            $(".comment_field textarea").css('color', 'black');
        }
    }
</script>

