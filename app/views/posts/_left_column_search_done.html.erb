<div class="left_column span-4">

  <div id="blue_box" class="span-4">
    <%= link_to image_tag("blue_box_final.png", :width => "140px"), root_path %>
  </div>

  <div id="tags">
    <p>Tags:</p>
    <ul>
      <% @tags.each do |tag| %>

          <% if tag.name == @tag %>
              <li><%= link_to "#{tag.name} (#{tag.posts.count})", {:controller => 'posts', :action => 'search_result', :tag => tag.name, :language => @language}, :class => "selected_tag" %> </li>
          <% else %>
              <li><%= link_to "#{tag.name} (#{tag.posts.count})", {:controller => 'posts', :action => 'search_result', :tag => tag.name, :language => @language} %> </li>
          <% end %>
      <% end %>
    </ul>
  </div>


</div>
